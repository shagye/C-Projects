<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/signal.js"></script>
    <script src="~/Scripts/myscript.js"></script>
    <script src="~/signalr/js"></script>
    <link href="~/Content/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Content/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/metisMenu.min.js"></script>
    <script src="~/Scripts/sb-admin-2.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.structure.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.canvasjs.min.js"></script>
    
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Manager/">@Session["HostelTitle"]</a>
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right bg-info">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="glyphicon glyphicon-user"></span>  @Session["name"] (@Session["type"]) <span class="glyphicon glyphicon-menu-down"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="~/Employee/EmployeeProfile"><span class="glyphicon glyphicon-user"></span> Profil</a>
                        </li>
                        <li>
                            <a href="~/User/ChangePassword"><span class="glyphicon glyphicon-lock"></span> Şifre degiştir</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a style="color:darkred" href="~/User/Logout"><span class="glyphicon glyphicon-log-out"></span> Çıkış yap</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <h3>&nbsp&nbsp<span class="glyphicon glyphicon-list pull-right"></span>MENU</h3>
                        </li>
                        <li>
                            <a href="~/Manager/"> <span class="glyphicon glyphicon-dashboard"></span>  İstatiskler</a>
                        </li>

                        <li>
                            <a href="~/Member/"><span class="glyphicon glyphicon-star-empty"></span> Üyeler <span class="glyphicon glyphicon-menu-right pull-right"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/Member/Create">Yeni Ekle</a>
                                </li>
                                <li>
                                    <a href="~/Member/">Üyeleri Görüntüle</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="~/Employee/ManagerView/"> <span class="glyphicon glyphicon-briefcase"></span>  Çalışan</a>
                        </li>
                        <li>
                            <a href="~/Room/ManagerView/"> <span class="glyphicon glyphicon-th"></span>  Odalar</a>
                        </li>
                        <li>
                            <a href="#"><span class="glyphicon glyphicon-usd"></span> Ürün & Satın Alma <span class="glyphicon glyphicon-menu-right pull-right"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/Product">Ürünler<span class="glyphicon glyphicon-menu-right pull-right"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>
                                            <a href="~/Product/Create">Yeni oluştur</a>
                                        </li>
                                        <li>
                                            <a href="~/Product">Ürünleri Görüntüle</a>
                                        </li>
                                    </ul>
                                    <!-- /.nav-third-level -->
                                </li>
                                <li>
                                    <a href="~/Purchase">Satın Almalar <span class="glyphicon glyphicon-menu-right pull-right"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>
                                            <a href="~/Purchase/Create">Oluştur</a>
                                        </li>
                                        <li>
                                            <a href="~/Purchase">Satın Alma Tarihi</a>
                                        </li>
                                    </ul>
                                    <!-- /.nav-third-level -->
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><span class="glyphicon glyphicon-usd"></span> Muhasebe <span class="glyphicon glyphicon-menu-right pull-right"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/MemberPayment">Ödemeler <span class="glyphicon glyphicon-menu-right pull-right"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>
                                            <a href="~/MemberPayment/CreatePayment">Yeni Oluştur</a>
                                        </li>
                                        <li>
                                            <a href="~/MemberPayment">Ödemeleri Görüntüle</a>
                                        </li>
                                    </ul>
                                    <!-- /.nav-third-level -->
                                </li>
                                <li>
                                    <a href="~/Bill">Faturalar <span class="glyphicon glyphicon-menu-right pull-right"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>
                                            <a href="~/Bill/Create">Fatura Oluştur</a>
                                        </li>
                                        <li>
                                            <a href="~/Bill">Faturaları Görüntüle</a>
                                        </li>
                                    </ul>
                                    <!-- /.nav-third-level -->
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <br />
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Başarılı!</strong> @TempData["Success"]
                            </div>
                        }
                        @if (TempData["Info"] != null)
                        {
                            <div class="alert alert-info alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Bilgi!</strong> @TempData["Info"]
                            </div>
                        }
                        @if (TempData["Failed"] != null)
                        {
                            <div class="alert alert-danger alert-dismissable fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Hata!</strong> @TempData["Failed"]
                            </div>
                        }
                        @RenderBody()
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->

</body>
</html>

