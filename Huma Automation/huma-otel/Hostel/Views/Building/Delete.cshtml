@model Building

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Yapı Silme</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>


<h4 class="text-danger">Bu binayla ilgili herşey silinecek!<br />Bu binayı silmek istediğinizden emin misiniz?</h4><hr />
<div class="row">
    <div class="col-sm-8">

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.BuildingName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BuildingName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Geri Dön", "Index",null, new { @class = "btn btn-info btn-large" })
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                
            </div>
        }
    </div>
</div>
  

